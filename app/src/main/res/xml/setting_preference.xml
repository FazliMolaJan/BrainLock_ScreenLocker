<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="useLockScreen"
        android:summaryOff="잠금화면을 사용하지 않습니다"
        android:summaryOn="잠금화면을 사용합니다"
        android:title="잠금화면 사용" />

    <ListPreference
        android:defaultValue="0"
        android:dependency="useLockScreen"
        android:entries="@array/numberOfpw"
        android:entryValues="@array/numberOfpw_values"
        android:key="numOfpw"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="비밀번호 자릿수 선택" />

</PreferenceScreen>